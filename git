# Grep (g)
alias gg='hub grep'
alias ggi='hub grep --ignore-case'
alias ggl='hub grep --files-with-matches'
alias ggL='hub grep --files-without-matches'
alias ggv='hub grep --invert-match'
alias ggw='hub grep --word-regexp'

# Index (i)
alias gia='hub add'
alias giA='hub add --patch'
alias giu='hub add --update'
alias gid='hub diff --no-ext-diff --cached'
alias giD='hub diff --no-ext-diff --cached --word-diff'
alias gii='hub update-index --assume-unchanged'
alias giI='hub update-index --no-assume-unchanged'
alias gir='hub reset'
alias giR='hub reset --patch'
alias gix='hub rm -r --cached'
alias giX='hub rm -rf --cached'

# Log (l)
alias gl='hub log --topo-order --pretty=format:"$_git_log_medium_format"'
alias gls='hub log --topo-order --stat --pretty=format:"$_git_log_medium_format"'
alias gld='hub log --topo-order --stat --patch --full-diff --pretty=format:"$_git_log_medium_format"'
alias glo='hub log --topo-order --pretty=format:"$_git_log_oneline_format"'
alias glg='hub log --topo-order --all --graph --pretty=format:"$_git_log_oneline_format"'
alias glb='hub log --topo-order --pretty=format:"$_git_log_brief_format"'
alias glc='hub shortlog --summary --numbered'
alias glS='hub log --show-signature'

# Merge (m)
alias gm='hub merge'
alias gmC='hub merge --no-commit'
alias gmF='hub merge --no-ff'
alias gma='hub merge --abort'
alias gmt='hub mergetool'

# Push (p)
alias gp='hub push'
alias gpf='hub push --force-with-lease'
alias gpF='hub push --force'
alias gpa='hub push --all'
alias gpA='hub push --all && hub push --tags'
alias gpt='hub push --tags'
alias gpc='hub push --set-upstream origin "(git-branch-current 2> /dev/null)"'
alias gpp='hub pull origin "(git-branch-current 2> /dev/null)" && hub push origin "(git-branch-current 2> /dev/null)"'

# Rebase (r)
alias gr='hub rebase'
alias gra='hub rebase --abort'
alias grc='hub rebase --continue'
alias gri='hub rebase --interactive'
alias grs='hub rebase --skip'

# Remote (R)
alias gR='hub remote'
alias gRl='hub remote --verbose'
alias gRa='hub remote add'
alias gRx='hub remote rm'
alias gRm='hub remote rename'
alias gRu='hub remote update'
alias gRp='hub remote prune'
alias gRs='hub remote show'
alias gRb='git-hub-browse'

# Stash (s)
alias gs='hub stash'
alias gsa='hub stash apply'
alias gsx='hub stash drop'
alias gsX='git-stash-clear-interactive'
alias gsl='hub stash list'
alias gsL='git-stash-dropped'
alias gsd='hub stash show --patch --stat'
alias gsp='hub stash pop'
alias gsr='git-stash-recover'
alias gss='hub stash save --include-untracked'
alias gsS='hub stash save --patch --no-keep-index'
alias gsw='hub stash save --include-untracked --keep-index'

# Submodule (S)
alias gS='hub submodule'
alias gSa='hub submodule add'
alias gSf='hub submodule foreach'
alias gSi='hub submodule init'
alias gSI='hub submodule update --init --recursive'
alias gSl='hub submodule status'
alias gSm='git-submodule-move'
alias gSs='hub submodule sync'
alias gSu='hub submodule foreach hub pull origin master'
alias gSx='git-submodule-remove'

# Tag (t)
alias gt='hub tag'
alias gtl='hub tag -l'
alias gts='hub tag -s'
alias gtv='hub verify-tag'

# Working Copy (w)
alias gws='hub status --ignore-submodules=$_git_status_ignore_submodules --short'
alias gwS='hub status --ignore-submodules=$_git_status_ignore_submodules'
alias gwd='hub diff --no-ext-diff'
alias gwD='hub diff --no-ext-diff --word-diff'
alias gwr='hub reset --soft'
alias gwR='hub reset --hard'
alias gwc='hub clean -n'
alias gwC='hub clean -f'
alias gwx='hub rm -r'
alias gwX='hub rm -rf'

