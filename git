set _git_log_medium_format '%C(bold)Commit:%C(reset) %C(green)%H%C(red)%d%n%C(bold)Author:%C(reset) %C(cyan)%an <%ae>%n%C(bold)Date:%C(reset)   %C(blue)%ai (%ar)%C(reset)%n%+B'
set _git_log_oneline_format '%C(green)%h%C(reset) %s%C(red)%d%C(reset)%n'
set _git_log_brief_format '%C(green)%h%C(reset) %s%n%C(blue)(%ar by %an)%C(red)%d%C(reset)%n'

# Status
set _git_status_ignore_submodules 'none'

alias g='hub'

# Branch (b)
alias gb='hub branch'
alias gba='hub branch --all --verbose'
alias gbc='hub checkout -b'
alias gbd='hub branch --delete'
alias gbD='hub branch --delete --force'
alias gbl='hub branch --verbose'
alias gbL='hub branch --all --verbose'
alias gbm='hub branch --move'
alias gbM='hub branch --move --force'
alias gbr='hub branch --move'
alias gbR='hub branch --move --force'
alias gbs='hub show-branch'
alias gbS='hub show-branch --all'
alias gbv='hub branch --verbose'
alias gbV='hub branch --verbose --verbose'
alias gbx='hub branch --delete'
alias gbX='hub branch --delete --force'

# Commit (c)
alias gc='hub commit --verbose'
alias gca='hub commit --verbose --all'
alias gcm='hub commit --message'
alias gcS='hub commit -S --verbose'
alias gcSa='hub commit -S --verbose --all'
alias gcSm='hub commit -S --message'
alias gcam='hub commit --all --message'
alias gco='hub checkout'
alias gcO='hub checkout --patch'
alias gcf='hub commit --amend --reuse-message HEAD'
alias gcSf='hub commit -S --amend --reuse-message HEAD'
alias gcF='hub commit --verbose --amend'
alias gcSF='hub commit -S --verbose --amend'
alias gcp='hub cherry-pick --ff'
alias gcP='hub cherry-pick --no-commit'
alias gcr='hub revert'
alias gcR='hub reset "HEAD^"'
alias gcs='hub show'
alias gcsS='hub show --pretty=short --show-signature'
alias gcl='git-commit-lost'
alias gcy='hub cherry -v --abbrev'
alias gcY='hub cherry -v'

# Conflict (C)
alias gCl='hub --no-pager diff --name-only --diff-filter=U'
alias gCa='hub add (gCl)'
alias gCe='hub mergetool (gCl)'
alias gCo='hub checkout --ours --'
alias gCO='gCo (gCl)'
alias gCt='hub checkout --theirs --'
alias gCT='gCt (gCl)'

# Data (d)
alias gd='hub ls-files'
alias gdc='hub ls-files --cached'
alias gdx='hub ls-files --deleted'
alias gdm='hub ls-files --modified'
alias gdu='hub ls-files --other --exclude-standard'
alias gdk='hub ls-files --killed'
alias gdi='hub status --porcelain --short --ignored | sed -n "s/^!! //p"'

# Fetch (f)
alias gf='hub fetch'
alias gfa='hub fetch --all'
alias gfc='hub clone'
alias gfcr='hub clone --recurse-submodules'
alias gfm='hub pull'
alias gfr='hub pull --rebase'

# Flow (F)
alias gFi='hub flow init'
alias gFf='hub flow feature'
alias gFb='hub flow bugfix'
alias gFl='hub flow release'
alias gFh='hub flow hotfix'
alias gFs='hub flow support'

alias gFfl='hub flow feature list'
alias gFfs='hub flow feature start'
alias gFff='hub flow feature finish'
alias gFfp='hub flow feature publish'
alias gFft='hub flow feature track'
alias gFfd='hub flow feature diff'
alias gFfr='hub flow feature rebase'
alias gFfc='hub flow feature checkout'
alias gFfm='hub flow feature pull'
alias gFfx='hub flow feature delete'

alias gFbl='hub flow bugfix list'
alias gFbs='hub flow bugfix start'
alias gFbf='hub flow bugfix finish'
alias gFbp='hub flow bugfix publish'
alias gFbt='hub flow bugfix track'
alias gFbd='hub flow bugfix diff'
alias gFbr='hub flow bugfix rebase'
alias gFbc='hub flow bugfix checkout'
alias gFbm='hub flow bugfix pull'
alias gFbx='hub flow bugfix delete'

alias gFll='hub flow release list'
alias gFls='hub flow release start'
alias gFlf='hub flow release finish'
alias gFlp='hub flow release publish'
alias gFlt='hub flow release track'
alias gFld='hub flow release diff'
alias gFlr='hub flow release rebase'
alias gFlc='hub flow release checkout'
alias gFlm='hub flow release pull'
alias gFlx='hub flow release delete'

alias gFhl='hub flow hotfix list'
